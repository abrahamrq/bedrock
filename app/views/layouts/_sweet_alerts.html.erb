<!-- Flash bootstrap element -->
<% unless flash.empty? %>
  <% [:success, :info, :danger, :error].each do |condition| %>
    <% if flash[condition] %>
    <script>
      $(window).load(function(){
        $(document).ready(function () {
            swal(
              { 
                title: "<%= t(condition) %>", 
                text: "<%= flash[condition] %>", 
                type: "<%= condition %>" 
              }
            );
        });
      });              
    </script> 
    <% end %>
  <% end %>
<% end %>